---
layout: default.hbs
categoryMap:
  company: 企业资讯
  industry: 行业资讯
---
<div class="spl">
  <div class="spl-left">
    <div class="spl-nav">
      <h3 class="spl-nav-header">五金资讯</h3>
      {{#eachProperty categoryMap}}
        <a class="spl-nav-item{{#compare ../category '==' key}} active{{/compare}}" href="/news/{{key}}/">{{get value}}</a>
      {{/eachProperty}}
    </div>
  </div>
  <div class="spl-right">
    <div class="bread hr-bg">
      当前位置：
      <a href="/">首页</a>
      &raquo;
      <a href="/news/">五金资讯</a>
      &raquo;
      <a href="/news/{{category}}">{{get categoryMap category}}</a>
      &raquo;
      <a href="{{permalink}}">{{title}}</a>
    </div>
    <div class="spl-content content">
      <div class="news-content">
        <h3 class="title">{{title}}</h3>
        <em class="date">{{formatDate date "%Y-%m-%d"}}</em>
        <hr class="break">
        {{>body}}
      </div>
    </div>
  </div>
</div>
