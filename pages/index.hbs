---
layout: none
permalink: /
---
{{#prettify}}
<!DOCTYPE html>
<html class="no-js">

<head>
  <meta charset="UTF-8">
  <title>{{#if title}}{{ title }}-{{ pkg.NAME }}{{else}}{{ pkg.NAME }}-{{ pkg.keywords }}{{/if}}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="{{#if description}}{{ description }}{{else}}{{ pkg.description }}{{/if}}" />
  <meta name="keywords" content="{{#if keywords}}{{ keywords }}{{else}}{{join pkg.keywords ','}}{{/if}}" />
  <link rel="stylesheet" type="text/css" href="{{obj_val compiled_assets '/assets/css/application.css'}}">
  <script src="{{obj_val compiled_assets '/assets/js/application.js'}}"></script>
  {{#unless production}}<script src="http://localhost:35729/livereload.js"></script>{{/unless}}
</head>

<body>
  <div class="header height-top">
    {{>header}}
  </div>
  <div class="container main height-top">
    {{>menu}}

    <div class="pas">
      <div class="pa">
        <div class="pa-left">
          <div class="pa-content">
            <img src="/images/a/a-1.jpg">
          </div>
        </div>
        <div class="pa-right">
          <div class="pa-content">
            <img src="/images/a/a-1-0.png" width="192" height="48"><br>
            <img src="/images/a/a-1-1.png" width="192" height="48"><br>
            <img src="/images/a/a-1-2.png" width="192" height="48"><br>
            <img src="/images/a/a-1-3.png" width="192" height="48"><br>
            <img src="/images/a/a-1-4.png" width="192" height="48">
          </div>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="pa hidden">
        <div class="pa-left">
          <div class="pa-content">
            <img src="/images/a/a-2.jpg">
          </div>
        </div>
        <div class="pa-right">
          <div class="pa-content">
            <img src="/images/a/a-2-0.png" width="192" height="48"><br>
            <img src="/images/a/a-2-1.png" width="192" height="48"><br>
            <img src="/images/a/a-2-2.png" width="192" height="48"><br>
            <img src="/images/a/a-2-3.png" width="192" height="48"><br>
            <img src="/images/a/a-2-4.png" width="192" height="48">
          </div>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
  <div class="ccontainer">
    <div class="col-3">
      <div class="col-3-item">
        <a href="http://www.xionghushan.com/join/">
          <img src="/images/home-join.jpg">
        </a>
      </div>
      <div class="col-3-item">
        <a href="http://shop1393381764998.1688.com/" target="_blank">
          <img src="/images/home-1688.jpg">
        </a>
      </div>
      <div class="col-3-split"></div>
      <div class="col-3-item">
        <a href="http://xionghushan.taobao.com/" target="_blank">
          <img src="/images/home-taobao.jpg">
        </a>
      </div>
      <div class="col-3-item">
        <a href="/">
          <img src="/images/home-service.jpg">
        </a>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="line btop clearfix">
      <div class="sliderkit" id="bottom-news">
        <div class="sliderkit-legend none-if-mobile">
          <a href="/news/">五金资讯</a>：
        </div>
        <div class="sliderkit-panels">
          {{#eachReverseLimit all_news 5}}
            <div class="sliderkit-panel">
              <a href="{{permalink}}">{{title}}</a>
            </div>
          {{/eachReverseLimit}}
        </div>
      </div>
    </div>

  </div>
  <div id="height-padding"></div>
  <div class="footer height-bottom">
    {{>footer}}
  </div>
</body>
</html>
{{/prettify}}

